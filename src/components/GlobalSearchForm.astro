---
// src/components/GlobalSearchForm.astro
export interface Props {
  showCloseButton?: boolean;
}

const { showCloseButton = false } = Astro.props;
---

<div class="global-search-container d-flex align-items-center">
  <form
    action="/blog"
    method="GET"
    role="search"
    id="global-search-form"
    class="flex-grow-1"
  >
    <div class="input-group">
      <input
        class="form-control"
        type="search"
        name="q"
        placeholder="Szukaj na blogu..."
        aria-label="Szukaj na blogu"
      />
      <button class="btn btn-search" type="submit" aria-label="Szukaj">
        <i class="bi bi-search"></i>
      </button>
    </div>
  </form>

  {
    showCloseButton && (
      <button
        class="btn btn-dark ms-2 close-search-btn"
        type="button"
        id="close-search-button"
        aria-label="Zamknij wyszukiwarkÄ™"
      >
        <i class="bi bi-x-lg" />
      </button>
    )
  }
</div>

<style>
  .form-control,
  .btn-search {
    background-color: #d2deee !important;
    border: none !important;
  }

  .form-control:focus {
    box-shadow: none;
    background-color: #c3d7f0 !important;
  }

  .btn-search {
    color: var(--bs-dark);
    transition:
      background-color 0.2s ease-in-out,
      color 0.2s ease-in-out;
  }

  .btn-search:hover {
    background-color: var(--bs-dark) !important;
    color: #ffffff !important;
  }

  .close-search-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    /* Set explicit dimensions to perfectly match .navbar-toggler */
    width: 56px;
    height: 40px;
    box-sizing: border-box;

    /* Use identical padding and font-size */
    padding: 4px 12px;
    font-size: 20px;
    line-height: 1;
  }

  .close-search-btn > i {
    position: relative;
    top: -1px;
  }
</style>
