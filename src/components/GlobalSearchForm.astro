---
// src/components/GlobalSearchForm.astro
import { Icon } from 'astro-icon/components';
export interface Props {
  showCloseButton?: boolean;
}

const { showCloseButton = false } = Astro.props;
---

<div class="global-search-container d-flex align-items-center">
  <form
    action="/blog"
    method="GET"
    role="search"
    id="global-search-form"
    class="flex-grow-1"
  >
    <div class="input-group">
      <input
        class="form-control"
        type="search"
        name="q"
        placeholder="Szukaj na blogu..."
        aria-label="Szukaj na blogu"
      />
      <button class="btn btn-search" type="submit" aria-label="Szukaj">
        <Icon name="bi:search" class="icon" />
      </button>
    </div>
  </form>

  {
    showCloseButton && (
      <button
        class="btn btn-dark ms-2 close-search-btn"
        type="button"
        id="close-search-button"
        aria-label="Zamknij wyszukiwarkÄ™"
      >
        <Icon name="bi:x-lg" class="icon" />
      </button>
    )
  }
</div>


<style>
  /* Zostawiamy tylko style specyficzne dla tego komponentu */
  .global-search-container .form-control,
  .global-search-container .btn-search {
    background-color: #d2deee;
    border: none;
  }

  .global-search-container .form-control:focus {
    box-shadow: none;
    background-color: #c3d7f0;
  }

  .global-search-container .btn-search {
    color: var(--bs-dark);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition:
      background-color 0.2s ease-in-out,
      color 0.2s ease-in-out;
  }

  .global-search-container .btn-search:hover {
    background-color: var(--bs-dark);
    color: #ffffff;
  }

  .global-search-container .close-search-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 40px;
    box-sizing: border-box;
    padding: 4px 12px;
    font-size: 20px;
    line-height: 1;
  }
</style>
