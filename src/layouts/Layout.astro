---
// src/layouts/Layout.astro

import '../styles/main.scss';
import Meta from '../components/Meta.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
}
const { title, description, noIndex } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <Meta title={title} description={description} noIndex={noIndex} />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <script>
      function initializeBootstrap() {
        import('bootstrap/dist/js/bootstrap.bundle.min.js');
      }
      // This ensures Bootstrap JS is re-initialized after every client-side navigation.
      document.addEventListener('astro:page-load', initializeBootstrap);
      initializeBootstrap(); // Also run on initial full page load.
    </script>
  </body>
</html>
