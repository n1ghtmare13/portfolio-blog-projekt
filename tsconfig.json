{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src",
    ".astro/types.d.ts",
    "src/env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
